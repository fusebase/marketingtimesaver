<div class="row-fluid">
    <div class="span9">
        <div id="mts-capture-page-designer" class="mts-page-designer">
        </div>
    </div>
    <div class="span3">
        <div class="mts-wizard-option" id="mts-wizard-option-capture-settings" style="display: block;">
            <h3>Display Settings</h3>
            <div class="mts-wizard-setting-group">
                <div class="btn-group pull-left" data-toggle="buttons-radio" data-display="mts-logo">
                    <button type="button" class="btn yes [[+mts.funnel.capture.0.display_logo:is=`Yes`:then=`active`]]">Yes</button>
                    <button type="button" class="btn no [[+mts.funnel.capture.0.display_logo:is=`No`:then=`active`]]">No</button>
                </div>
                <label class="pull-left">Logo</label>
            </div>
            <div class="mts-wizard-setting-group">
                <div class="btn-group pull-left" data-toggle="buttons-radio" data-display="mts-preheadline">
                    <button type="button" class="btn yes [[+mts.funnel.capture.0.display_preheadline:is=`Yes`:then=`active`]]">Yes</button>
                    <button type="button" class="btn no [[+mts.funnel.capture.0.display_preheadline:is=`No`:then=`active`]]">No</button>
                </div>
                <label class="pull-left">Pre-Headline</label>
            </div>
            <div class="mts-wizard-setting-group">
                <div class="btn-group pull-left" data-toggle="buttons-radio" data-display="mts-headline">
                    <button type="button" class="btn yes [[+mts.funnel.capture.0.display_headline:is=`Yes`:then=`active`]]">Yes</button>
                    <button type="button" class="btn no [[+mts.funnel.capture.0.display_headline:is=`No`:then=`active`]]">No</button>
                </div>
                <label class="pull-left">Headline</label>
            </div>
            <div class="mts-wizard-setting-group">
                <div class="btn-group pull-left" data-toggle="buttons-radio" data-display="mts-subheadline">
                    <button type="button" class="btn yes [[+mts.funnel.capture.0.display_subheadline:is=`Yes`:then=`active`]]">Yes</button>
                    <button type="button" class="btn no [[+mts.funnel.capture.0.display_subheadline:is=`No`:then=`active`]]">No</button>
                </div>
                <label class="pull-left">Sub-Headline</label>
            </div>
            <div class="mts-wizard-setting-group">
                <div class="btn-group pull-left" data-toggle="buttons-radio" data-display="mts-video">
                    <button type="button" class="btn yes [[+mts.funnel.capture.0.display_video:is=`Yes`:then=`active`]]">Yes</button>
                    <button type="button" class="btn no [[+mts.funnel.capture.0.display_video:is=`No`:then=`active`]]">No</button>
                </div>
                <label class="pull-left">Video</label>
            </div>
            <div class="mts-wizard-setting-group">
                <div class="btn-group pull-left" data-toggle="buttons-radio" data-display="mts-secondary-headline">
                    <button type="button" class="btn yes [[+mts.funnel.capture.0.display_secondary_headline:is=`Yes`:then=`active`]]">Yes</button>
                    <button type="button" class="btn no [[+mts.funnel.capture.0.display_secondary_headline:is=`No`:then=`active`]]">No</button>
                </div>
                <label class="pull-left">Secondary Headline</label>
            </div>
            <div class="mts-wizard-setting-group">
                <div class="btn-group pull-left" data-toggle="buttons-radio" data-display="mts-copy-block1">
                    <button type="button" class="btn yes [[+mts.funnel.capture.0.display_copy_block1:is=`Yes`:then=`active`]]">Yes</button>
                    <button type="button" class="btn no [[+mts.funnel.capture.0.display_copy_block1:is=`No`:then=`active`]]">No</button>
                </div>
                <label class="pull-left">Copy Block 1</label>
            </div>
            <div class="mts-wizard-setting-group">
                <div class="btn-group pull-left" data-toggle="buttons-radio" data-display="mts-bullets">
                    <button type="button" class="btn yes [[+mts.funnel.capture.0.display_bullets:is=`Yes`:then=`active`]]">Yes</button>
                    <button type="button" class="btn no [[+mts.funnel.capture.0.display_bullets:is=`No`:then=`active`]]">No</button>
                </div>
                <label class="pull-left">Bullets</label>
            </div>
            <div class="mts-wizard-setting-group">
                <div class="btn-group pull-left" data-toggle="buttons-radio" data-display="mts-copy-block2">
                    <button type="button" class="btn yes [[+mts.funnel.capture.0.display_copy_block2:is=`Yes`:then=`active`]]">Yes</button>
                    <button type="button" class="btn no [[+mts.funnel.capture.0.display_copy_block2:is=`No`:then=`active`]]">No</button>
                </div>
                <label class="pull-left">Copy Block 2</label>
            </div>
            <div class="mts-wizard-setting-group">
                <div class="btn-group pull-left" data-toggle="buttons-radio" data-display="mts-cta-headline">
                    <button type="button" class="btn yes [[+mts.funnel.capture.0.display_cta_headline:is=`Yes`:then=`active`]]">Yes</button>
                    <button type="button" class="btn no [[+mts.funnel.capture.0.display_cta_headline:is=`No`:then=`active`]]">No</button>
                </div>
